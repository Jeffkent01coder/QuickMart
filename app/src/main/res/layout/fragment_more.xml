<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/qlogo" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/search"
                android:iconifiedByDefault="false"
                android:queryHint="Search Here...." />

            <ImageView
                android:id="@+id/scanner"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/scanner" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <Button
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                    android:text="Profile"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_share_location_24"
                    android:text="Location"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_menu_24"
                    android:text="Orders"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_notifications_none_24"
                    android:text="Notifications"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                    android:text="Customer Service"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:text="About"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_menu_24"
                    android:text="Terms and Conditions"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                    android:text="Privacy"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:text="Logout"
                    android:textColor="#F20C0C"
                    android:textAllCaps="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you haven't Logged In"
                    android:textAlignment="center"
                    android:layout_marginTop="95dp"
                    android:textSize="15sp"
                    />


                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="#F20C0C"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_baseline_login_24"
                    android:text="Log In"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    />

            </TableLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>